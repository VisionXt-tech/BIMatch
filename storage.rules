rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User files - each user can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Company logos - companies can upload/update their own logos
    match /companies/{companyId}/logo {
      allow read: if true; // Logos are public
      allow write: if request.auth != null && request.auth.uid == companyId
        && request.resource.size < 2 * 1024 * 1024 // 2MB limit
        && request.resource.contentType.matches('image/.*');
    }
    
    // Company logos alternative path - companies can upload/update their own logos
    match /companyLogos/{companyId}/{allPaths=**} {
      allow read: if true; // Logos are public
      allow write: if request.auth != null && request.auth.uid == companyId
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*');
    }
  }
}